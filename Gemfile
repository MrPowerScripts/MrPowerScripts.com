# frozen_string_literal: true

source "https://rubygems.org"

git_source(:github) {|repo_name| "https://github.com/#{repo_name}" }

# gem "rails"
gem "jekyll", github: 'jekyll/jekyll'
gem "jekyll-sitemap" # Create a sitemap using the official Jekyll sitemap gem
gem "jekyll-feed" # Create an Atom feed using the official Jekyll feed gem
gem "jekyll-paginate-v2", github: 'sverrirs/jekyll-paginate-v2' #pagination!
gem "html-proofer" # for testing
gem "jsonlint" # to verify any generated json files